<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:orientation="vertical"
    tools:context=".Activities.AuthenticationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/clickSignInTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="Sign in"
            android:textAllCaps="true"
            android:textColor="@color/lightgrey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clickSignUpTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/clickSignInTvId"
            android:background="@drawable/border2"
            android:padding="8dp"
            android:text="Sign up"
            android:textAllCaps="true"
            android:textColor="@color/lightgrey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workerGoToLoginBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Providing a Service?"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#D8DEFF" />

    </RelativeLayout>

    <include
        android:id="@+id/setLayoutSignUpId"
        layout="@layout/user_signup_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <include
        android:id="@+id/setLayoutSignInId"
        layout="@layout/user_signin_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

</LinearLayout>